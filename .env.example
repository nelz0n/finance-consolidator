# Finance Consolidator Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:////app/data/finance.db

# =============================================================================
# GOOGLE SHEETS (for initial migration)
# =============================================================================
# Set to true on first run to import existing data from Google Sheets
INIT_FROM_SHEETS=false

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# AUTO-SYNC
# =============================================================================
ENABLE_AUTO_SYNC=false
SYNC_INTERVAL_HOURS=24

# =============================================================================
# CURRENCY
# =============================================================================
BASE_CURRENCY=CZK
